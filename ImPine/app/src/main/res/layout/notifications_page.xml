<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/piney"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/circular_button_yellow"
            android:scaleType="centerInside"
            android:src="@drawable/pine_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/note"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/circular_button_yellow"
            android:scaleType="centerInside"
            android:src="@drawable/note"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/footerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_green_light"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:background="@drawable/circular_button_green"
            android:scaleType="centerInside"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/diary"
            android:layout_width="40dp"
            android:layout_height="77dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/circular_button_green"
            android:scaleType="centerInside"
            android:src="@drawable/pine" />

        <ImageButton
            android:id="@+id/prediction"
            android:layout_width="40dp"
            android:layout_height="77dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/circular_button_green"
            android:scaleType="centerInside"
            android:src="@drawable/prediction" />

        <ImageButton
            android:id="@+id/friend"
            android:layout_width="40dp"
            android:layout_height="77dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/circular_button_green"
            android:scaleType="centerInside"
            android:src="@drawable/friend" />

        <ImageButton
            android:id="@+id/set"
            android:layout_width="40dp"
            android:layout_height="77dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/circular_button_green"
            android:scaleType="centerInside"
            android:src="@drawable/set" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Notifications"
        android:fontFamily="@font/short_stack"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerBar" />

    <View
        android:id="@+id/rectangle1"
        android:layout_width="362dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNotifications" />
    <View
        android:id="@+id/rectangle2"
        android:layout_width="362dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
    app:layout_constraintTop_toBottomOf="@+id/rectangle1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
    <View
        android:id="@+id/rectangle3"
        android:layout_width="362dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/rectangle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <View
        android:id="@+id/rectangle4"
        android:layout_width="362dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/rectangle3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>